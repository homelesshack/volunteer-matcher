<div class="wrapper">
  <div class="page db2-db3 db-padfull">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="db-all">
          <h2>Sign up</h2>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'db-padin' } %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'db-padin' } %>
            <%= f.input :password_confirmation, required: true, input_html: { class: 'db-padin' } %>
          </div>
        </div>
        <div class="form-actions db2">
          <%= f.button :submit, 'Sign up' %>
        </div>
        <div class="db3">
          <%= render 'devise/shared/links' %>
        </div>
    <% end %>
  </div>
</div>

