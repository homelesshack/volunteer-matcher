<!DOCTYPE html>
<html class="da-clear db-clear t-clear m-clear">
  <head>
    <title>VolunteerMatcher</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="wrapper">
        <div class="da1-da2">Volunteer Matcher</div>
      </div>
    </div>

    <% if notice || alert %>
        <div class="notices">
          <div class="wrapper">
            <div class="db2-db3 ">
              <%= notice %>
              <%= alert %>
            </div>
          </div>
        </div>
        <div class="push"></div>
    <% end %>
    <%= yield %>
  </body>
  <%= javascript_include_tag 'gridset-overlay', 'data-turbolinks-track': 'reload' %>
</html>
