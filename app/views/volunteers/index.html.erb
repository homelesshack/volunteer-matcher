<p id="notice"><%= notice %></p>

<h1>Volunteers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hours per week</th>
      <th>Days available</th>
      <th>Skills</th>
      <th>Postcode</th>
      <th>Miles from</th>
      <th>Dbs checked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.name %></td>
        <td><%= volunteer.hours_per_week %></td>
        <td><%= volunteer.days_available.join(', ') %></td>
        <td><%= volunteer.skills.join(', ') %></td>
        <td><%= volunteer.postcode %></td>
        <td><%= volunteer.miles_from %></td>
        <td><%= volunteer.dbs_checked %></td>
        <td><%= link_to 'Show', volunteer %></td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

